<!-- Loop over each object in the projects array -->
{{#each blogs as |blog|}}
  <div class='row mb-4 blog'>
    <div class='col'>
      <h5 class='blog-title'>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{{get_emoji}}}
        <a href='/blog/{{blog.id}}'>{{blog.title}}</a>

      </h5>
      <p class='blog-content'>

        <!-- Pass needed_funding value to the helper function -->

        {{blog.content}}

      </p>
      <u><strong>posted by
        {{blog.user.name}}
        on
        {{format_date blog.date_created}}</u></strong>
    </div>
    <div class='col-md-7'>

    </div>
  </div>
{{/each}}